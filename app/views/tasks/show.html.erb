<div class="container">
  <div class="d-flex justify-content-between align-items-center mb-4">
  <h1><%= @task.name %></h1>
  <div class="actions">
  <%= link_to edit_task_path(@task.id) , class: 'btn btn-light btn-sm border' do%>
  <i class="fa fa-pencil"></i> Edit this task
  <% end %>
</div>
</div>

<p><%=@task.details%></p>
<% if @task.completed %>
    <i class="fa fa-check-square-o"></i> Task completed
  <% else %>
    <i class="fa fa-square-o"></i> Task not completed
  <% end %>
  <div class="actions">
  <%= link_to "Return to Task List", tasks_path, class: 'btn btn-primary' %>
  <%= link_to "Delete", task_path(@task),class: 'btn btn-danger', data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
  </div>
</div>
